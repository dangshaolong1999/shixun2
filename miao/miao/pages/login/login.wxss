.bar {
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
}

.bar .back {
  width: 30rpx;
  height: 30rpx;
  border-top: 5rpx solid #ccc;
  border-left: 5rpx solid #ccc;
  transform: rotate(-45deg);
  margin-top: 30rpx;
  margin-left: 30rpx;
}

